<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/SubjectList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <!-- 메뉴 돌아가기(취소) 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Subject_Menu_XButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:backgroundTint="#8A67C8"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <!-- 메뉴 보기 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Subject_MenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:backgroundTint="#8A67C8"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="?android:attr/actionModeFindDrawable" />

    <!-- 과목 추가하기 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SubjectAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="#49B7C5"
        app:borderWidth="0dp"
        app:elevation="8dp" />

    <!-- 과목 삭제하기 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SubjectDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"
        android:clickable="true"
        app:backgroundTint="#E6675E"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <!-- 과목 삭제 "취소" 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SubjectDeleteButton_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:backgroundTint="#E6675E"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <!-- 과목 삭제 "완료" 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SubjectDeleteButton_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"
        android:clickable="true"
        app:backgroundTint="#E6675E"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


</RelativeLayout>