<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDDA9B"
    android:orientation="vertical">

    <!-- TextViews 수직 정렬 -->
    <TextView
        android:id="@+id/Check_Text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Check_Text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Check_Text1"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Buttons 수평 정렬 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Check_Text2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/Check_Ok_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#4CAF50"
            android:text="확인"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/Check_Back_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:backgroundTint="#4CAF50"
            android:text="돌아가기"
            android:textColor="#000000"/>
    </LinearLayout>

</RelativeLayout>